    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
        }

        .section-title {
            margin-bottom: 30px;
        }

        .form-section {
            display: none;
        }

        .form-section.active {
            display: inherit;
        }

        .btn {
            margin-top: 20px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
        }

        .preview-btn {
            font-size: 14px;
            font-weight: bold;
            text-decoration: underline;
            cursor: pointer;
        }

