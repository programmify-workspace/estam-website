<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESTAM Admin Dashboard</title>
    <!-- ======= Styles ====== -->
    <link rel="stylesheet" href="/dashboard-assets/css/style.css">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li style="margin-top:10px;">
                    <a href="#">
                        <span class="icon">
                            <img src="/dashboard-assets/imgs/Estam Uni logo.png" alt="ESTAM Logo"
                style="width:60px; height:auto; border-radius:50%; ">
                        </span>
                        <span class="title">ESTAM DASHBOARD</span>
                    </a>
                </li>

                <li>
                    <a href="/admin-dashboard">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="/admin-dashboard/students">
                        <span class="icon">
                            <ion-icon name="people-outline"></ion-icon>
                        </span>
                        <span class="title">Students</span>
                    </a>
                </li>

                <li>
                    <a href="/admin-dashboard/rejected-applications">
                        <span class="icon">
                            <ion-icon name='ban-outline'></ion-icon>
                        </span>
                        <span class="title">Rejects</span>
                    </a>
                </li>

                <li>
                    <a href="/admin-dashboard/admin-settings">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Change Password</span>
                    </a>
                </li>

                <li>
                    <a href="/admin-logout">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        {{#each applicants}}
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                {{!-- <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div> --}}

                <div class="user">
                    <img src="/dashboard-assets/imgs/Estam Uni logo.png" alt="">
                </div>
            </div>

            <div class="topic">
                <h1>Application</h1>
            </div>

            <div class="cardBox">
                <div class="card">
                    <img src="/uploads/applicants/{{photo_passport}}" width="200px" style="width:200px; height:200px; object-fit:cover;" alt="">
                </div>
                
            </div>
            <div class="cardBox" style="margin:auto;">
                <div class="card" width="200px" style="display: flex; justify-content:space-between; margin:auto; gap:40px;">
                <form action="/admit-applicant" method="post" onsubmit="return confirm('Are you sure you want to admit this applicant?')" >
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="first_name" value="{{first_name}}">
                    <input type="hidden" name="middle_name" value="{{middle_name}}">
                    <input type="hidden" name="last_name" value="{{last_name}}">
                    <input type="hidden" name="gender" value="{{gender}}">
                    <input type="hidden" name="dob" value="{{dob}}">
                    <input type="hidden" name="email" value="{{email}}">
                    <input type="hidden" name="phone" value="{{phone}}">
                    <input type="hidden" name="country" value="{{country}}">
                    <input type="hidden" name="state" value="{{state}}">
                    <input type="hidden" name="course" value="{{course}}">
                    <input type="hidden" name="application_type" value="{{application_type}}">
                    <input type="hidden" name="transfer_level" value="{{transfer_level}}">
                    <input type="hidden" name="ssce_certificate" value="{{ssce_certificate}}">
                    <input type="hidden" name="birth_certificate" value="{{birth_certificate}}">
                    <input type="hidden" name="photo_passport" value="{{photo_passport}}">
                    <input type="hidden" name="passport" value="{{passport}}">
                    <button type="submit" class="status delivered" style="margin: auto; border:none;">Admit</button>
                </form>
                
                <form action="/reject-applicant" method="post" onsubmit="return confirm('Are you sure you want to reject this applicant?');">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="first_name" value="{{first_name}}">
                    <input type="hidden" name="middle_name" value="{{middle_name}}">
                    <input type="hidden" name="last_name" value="{{last_name}}">
                    <input type="hidden" name="gender" value="{{gender}}">
                    <input type="hidden" name="dob" value="{{dob}}">
                    <input type="hidden" name="email" value="{{email}}">
                    <input type="hidden" name="phone" value="{{phone}}">
                    <input type="hidden" name="country" value="{{country}}">
                    <input type="hidden" name="state" value="{{state}}">
                    <input type="hidden" name="course" value="{{course}}">
                    <button type="submit" class="status return" style="margin: auto; border:none;">Reject</button>
                </form>
                </div>
            </div>

            

            <!-- ================ Order Details List ================= -->
            
            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Personal Information</h2>
                    </div>
 
                    <div class="application-details">
                        <div class="application-detail-each">
                            <h3>Name: </h3>
                            <p>{{first_name}} {{middle_name}} {{last_name}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Gender: </h3>
                            <p>{{gender}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Date of Birth: </h3>
                            <p>{{formatted_dob}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Email: </h3>
                            <p>{{email}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Phone Number: </h3>
                            <p>{{phone}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Nationality: </h3>
                            <p>{{nationality}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Address: </h3>
                            <p>{{address}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>City: </h3>
                            <p>{{city}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Country: </h3>
                            <p>{{country}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>State: </h3>
                            <p>{{state}}</p>
                        </div>
                    </div>
                        
                       
                </div>
                     
            </div>


            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Next of Kin Details</h2>
                    </div>
 
                    <div class="application-details">
                        <div class="application-detail-each">
                            <h3>Full Name: </h3>
                            <p>{{nok_name}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Address: </h3>
                            <p>{{nok_address}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>City: </h3>
                            <p>{{nok_city}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>State: </h3>
                            <p>{{nok_state}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Country: </h3>
                            <p>{{nok_country}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Email: </h3>
                            <p>{{nok_email}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Relationship: </h3>
                            <p>{{nok_relationship}}</p>
                        </div>

                    </div>
                     
                </div>
            </div>


            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Educational Background</h2>
                    </div>

                    <div class="application-details">
                        <div class="application-detail-each">
                            <h3>Primary School Name: </h3>
                            <p>{{primary_name}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Secondary School Name: </h3>
                            <p>{{secondary_name}}</p>
                        </div>

                        {{#if additional_school}}
                        <div class="application-detail-each">
                            <h3>Additional School: </h3>
                            <p>{{additional_school}}</p>
                        </div>
                        {{/if}}

                    </div>
                </div>
            </div>

            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Program Information</h2>
                    </div>

                    <div class="application-details">
                        <div class="application-detail-each">
                            <h3>Course of Study: </h3>
                            <p>{{course}}</p>
                        </div>

                        <div class="application-detail-each">
                            <h3>Application Type: </h3>
                            <p>{{application_type}}</p>
                        </div>

                        {{#if transfer_level}}
                        <div class="application-detail-each">
                            <h3>Transfer Student Level: </h3>
                            <p>{{transfer_level}}</p>
                        </div>
                        {{/if}}

                        <div class="application-detail-each">
                            <h3>Intended Start Date: </h3>
                            <p>{{start_date}}</p>
                        </div>

                        
                    </div>
                    
                </div>
            </div>


            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Birth Certificate/Age Declaration</h2>
                    </div>

                    <div style="display:flex; justify-content:center;">
                        <embed src="/uploads/applicants/{{birth_certificate}}" width="100%" style="max-width:600px; min-height: 500px; height:100%; object-fit:contain; padding-bottom:20px;"></embed>
                        <a download href="/uploads/applicants/{{birth_certificate}}" style="position:absolute; bottom:10px; right:20px;">download file</a>
                    </div>
                    
                </div>
                
            </div>

            <div class="details">
                <div class="recentOrders">
                        <div class="cardHeader">
                            <h2>Secondary School Learning Certificate(WEAC/NECO/GCE..)</h2>
                        </div>

                        <div style="display:flex; justify-content:center;">
                            <embed src="/uploads/applicants/{{ssce_certificate}}" width="100%" style="max-width:600px; min-height: 500px; height:100%; object-fit:contain; padding-bottom:20px;"></embed>
                            <a download href="/uploads/applicants/{{ssce_certificate}}" style="position:absolute; bottom:10px; right:20px;">download file</a>
                        </div>
                        
                </div>
            </div>

            {{#if passport }}
            <div class="details">
                <div class="recentOrders">
                        <div class="cardHeader">
                            <h2>Passport</h2>
                        </div>

                        <div style="display:flex; justify-content:center;">
                            <embed src="/uploads/applicants/{{passport}}" width="100%" style="max-width:600px; min-height: 500px; height:100%; object-fit:contain; padding-bottom:20px;"></embed>
                            <a download href="/uploads/applicants/{{passport}}" style="position:absolute; bottom:10px; right:20px; ">download file</a>
                        </div>
                        
                </div>
            </div>
            {{/if}}
        </div>
    </div>
    {{/each}}
    <!-- =========== Scripts =========  -->
    <script src="/dashboard-assets/js/main.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>