<!-- ========================= Main ==================== -->
{{#each student}}
<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>

        {{!-- <div class="search">
            <label>
                <input type="text" placeholder="Search here">
                <ion-icon name="search-outline"></ion-icon>
            </label>
        </div> --}}

        <div class="user">
            <img src="/dashboard-assets/imgs/Estam Uni logo.png" alt="">
        </div>
    </div>

    {{!-- <div class="cardBox">
        <div class="card">
            <img src="/uploads/applicants/{{photo_passport}}" width="200px" alt="">
        </div>

    </div> --}}



    <!-- ================ Order Details List ================= -->
    {{!-- <div>
        ytjy
        {{#if errorMessage}}
        <h2>trfje{{errorMessage}}</h2>
        {{/if}}

        {{#if successMessage}}
        <h2>{{successMessage}}</h2>
        {{/if}}
    </div> --}}

    <div class="details">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Student's Information</h2>
            </div>
            <div class="application-details">
                <div class="application-detail-each">
                    <h3>Name: </h3>
                    <p>{{first_name}} {{middle_name}} {{last_name}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Gender: </h3>
                    <p>{{gender}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Date of Birth: </h3>
                    <p>{{formatted_dob}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Course: </h3>
                    <p>{{course}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Level: </h3>
                    <p>{{level}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Email: </h3>
                    <p>{{email}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Phone Number: </h3>
                    <p>{{phone}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>Country: </h3>
                    <p>{{country}}</p>
                </div>

                <div class="application-detail-each">
                    <h3>State: </h3>
                    <p>{{state}}</p>
                </div>

                {{#if username}}
                <div class="application-detail-each">
                    <h3>Username: </h3>
                    <p>{{username}}</p>
                </div>
                {{/if}}

                {{#if password}}
                <div class="application-detail-each">
                    <h3>Password: </h3>
                    <p>{{password}}</p>
                </div>
                {{/if}}
            </div>

        </div>

    </div>

    <div class="details" style=" min-height: 100px; ">
        <div class="recentOrders" style="min-height: 100px;">
           
                <form action="/send-admission-letter" method="post"
                    onsubmit="return confirm('Are you sure you want to send an admission letter to this applicant?')"
                    style="margin:auto;">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="first_name" value="{{first_name}}">
                    <input type="hidden" name="middle_name" value="{{middle_name}}">
                    <input type="hidden" name="last_name" value="{{last_name}}">
                    <input type="hidden" name="email" value="{{email}}">
                    <input type="hidden" name="course" value="{{course}}">
                    <input type="hidden" name="application_type" value="{{level}}">
                    <input type="hidden" name="currentUsername" value="{{username}}">
                    <input type="hidden" name="currentPassword" value="{{password}}">
                    <div style="padding: 10px;">
                        {{#if is_verified}}
                        <button type="submit" class="status delivered"
                            style="margin: auto; border:none; color:rgb(165, 165, 255);">Send Admission Letter
                            Again</button>
                        <p style="font-size:13px; margin-top:10px; text-align:center; color:green;">Admission letter has
                            already been sent!</p>
                        {{else}}
                        <button type="submit" class="status delivered" style="margin: auto; border:none;">Send Admission
                            Letter</button>
                        <p style="font-size:13px; margin-top:10px; text-align:center; color:red;">Admission letter not sent
                            yet!</p>
                        {{/if }}

                    </div>
                </form>

                <form action="/send-login-credentials" method="post"
                    onsubmit="return confirm('Are you sure you want to send an login credentials to this student?')"
                    style="margin:auto;">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="first_name" value="{{first_name}}">
                    <input type="hidden" name="middle_name" value="{{middle_name}}">
                    <input type="hidden" name="last_name" value="{{last_name}}">
                    <input type="hidden" name="email" value="{{email}}">
                    <input type="hidden" name="course" value="{{course}}">
                    <input type="hidden" name="application_type" value="{{level}}">
                    <input type="hidden" name="currentUsername" value="{{username}}">
                    <input type="hidden" name="currentPassword" value="{{password}}">
                    <div style="padding: 10px;">
                        {{#if password}}
                        <button type="submit" class="status credentials"
                            style="margin: auto; border:none; color:rgb(165, 165, 255);">Send Login Credentials
                            Again</button>
                        <p style="font-size:13px; margin-top:10px; text-align:center; color:green;">Login credentials has
                            already been sent!</p>
                        {{else}}
                        <button type="submit" class="status credentials" style="margin: auto; border:none;">Send Login
                            Credentials</button>
                        <p style="font-size:13px; margin-top:10px; text-align:center; color:red;">Login credentials not sent
                            yet!</p>
                        {{/if }}
                    </div>
                </form>
                
        </div>
    </div>

</div>
</div>
{{/each}}
